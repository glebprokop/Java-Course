import java.util.Scanner;

public class Main
{
	public static void main(String[] args){
		Scanner in = new Scanner(System.in);
        System.out.print("Input your variables a, b, c (press Ent after ever var): ");
        double a = in.nextInt();
		double b = in.nextInt();
		double c = in.nextInt();
		System.out.println(((a-3)*b/2)+c);
	}
}
